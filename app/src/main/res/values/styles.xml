<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/invisible</item>
    </style>


    <style name="default_button">
        <item name="android:background">@drawable/corner_default_button</item>
        <item name="android:padding">@dimen/default_material_barrier</item>
        <item name="android:layout_margin">@dimen/default_material_barrier</item>
        <item name="android:textSize">@dimen/default_button_text_size</item>
        <item name="android:textColor">@color/button_default_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="red_button">
        <item name="android:background">@drawable/corner_red_button</item>
        <item name="android:padding">@dimen/default_material_barrier</item>
        <item name="android:layout_margin">@dimen/default_material_barrier</item>
        <item name="android:textSize">@dimen/default_button_text_size</item>
        <item name="android:textColor">@color/button_default_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="grey_button">
        <item name="android:background">@drawable/corner_grey_button</item>
        <item name="android:padding">@dimen/default_material_barrier</item>
        <item name="android:layout_margin">@dimen/default_material_barrier</item>
        <item name="android:textSize">@dimen/default_button_text_size</item>
        <item name="android:textColor">@color/button_default_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="link_button">
        <item name="android:background">@color/invisible</item>
        <item name="android:padding">@dimen/default_material_barrier</item>
        <item name="android:layout_margin">@dimen/default_material_barrier</item>
        <item name="android:textSize">@dimen/link_button_text_size</item>
        <item name="android:textColor">@color/hyper_link</item>
        <item name="android:textStyle">bold|italic</item>
    </style>



    <style name="default_dialog">
        <item name="android:background">@drawable/round_corner_dialog</item>
        <item name="android:padding">@dimen/default_material_barrier</item>
        <item name="android:layout_margin">@dimen/default_material_barrier</item>
        <item name="android:textSize">@dimen/default_button_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>



    <style name="default_toolbar">
        <item name="android:padding">@dimen/default_material_barrier</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/tool_bar</item>
    </style>
    <style name="default_toolbar_default_button">
        <item name="android:background">@drawable/corner_default_button</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:padding">@dimen/default_material_barrier</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>



    <style name="default_title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/default_title_color</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="default_title_default_toolbar">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:padding">@dimen/default_material_barrier</item>
    </style>

    <style name="default_recycler_view">
        <item name="android:background">@color/default_recycler_view_background</item>
        <item name="android:transcriptMode">alwaysScroll</item>
    </style>

    <style name="default_message_list_item">
        <item name="android:background">@drawable/corner_default_message_list_item</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="system_message_list_item">
        <item name="android:background">@color/invisible</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
    </style>


</resources>