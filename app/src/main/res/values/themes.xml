<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartArzamas" parent="Theme.Design.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->

        <item name="color_default_light">@color/design_default_light</item>
        <item name="color_red_light">@color/design_red_light</item>
        <item name="color_gray_light">@color/design_gray_light</item>
        <item name="color_black_light">@color/design_black_light</item>

        <item name="color_default_main">@color/design_default_main</item>
        <item name="color_red_main">@color/design_red_main</item>
        <item name="color_gray_main">@color/design_gray_main</item>
        <item name="color_black_main">@color/design_black_main</item>

        <item name="color_default_dark">@color/design_default_dark</item>
        <item name="color_red_dark">@color/design_red_dark</item>
        <item name="color_gray_dark">@color/design_gray_dark</item>
        <item name="color_black_dark">@color/design_black_dark</item>

    </style>
</resources>