<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartArzamas" parent="Theme.Design">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->

        <item name="color_default_light">@color/design_dark_default_light</item>
        <item name="color_red_light">@color/design_dark_black_light</item>
        <item name="color_gray_light">@color/design_dark_gray_light</item>
        <item name="color_black_light">@color/design_dark_black_light</item>

        <item name="color_default_main">@color/design_dark_default_main</item>
        <item name="color_red_main">@color/design_dark_black_main</item>
        <item name="color_gray_main">@color/design_dark_gray_main</item>
        <item name="color_black_main">@color/design_dark_black_main</item>

        <item name="color_default_dark">@color/design_dark_default_dark</item>
        <item name="color_red_dark">@color/design_dark_black_dark</item>
        <item name="color_gray_dark">@color/design_dark_gray_dark</item>
        <item name="color_black_dark">@color/design_dark_black_dark</item>


        <item name="android:textColor">@color/textColor_dark</item>

    </style>

    <style name="Theme.SmartArzamas.NoActionBar" parent="Theme.SmartArzamas">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>