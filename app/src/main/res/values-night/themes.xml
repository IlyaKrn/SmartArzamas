<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartArzamas" parent="Theme.Design">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->


        <!--BACKGROUND-->

        <item name="button_default_background">@color/design_dark_default_main</item>
        <item name="button_red_background">@color/design_dark_red_main</item>
        <item name="button_gray_background">@color/design_dark_gray_main</item>

        <item name="button_fab_default_background">@color/design_dark_default_main</item>
        <item name="button_fab_red_background">@color/design_dark_red_main</item>
        <item name="button_fab_gray_background">@color/design_dark_gray_main</item>

        <item name="button_toolbar_default_background">@color/design_dark_default_main</item>
        <item name="button_toolbar_red_background">@color/design_dark_red_main</item>
        <item name="button_toolbar_gray_background">@color/design_dark_gray_main</item>

        <item name="toolbar_default_background">@color/design_dark_default_main</item>
        <item name="toolbar_red_background">@color/design_dark_red_main</item>
        <item name="toolbar_gray_background">@color/design_dark_gray_main</item>

        <item name="dialog_default_background">@color/design_dark_default_light</item>
        <item name="dialog_red_background">@color/design_dark_red_light</item>
        <item name="dialog_gray_background">@color/design_dark_gray_light</item>

        <item name="recyclerView_default_background">@color/design_black_main</item>
        <item name="recyclerView_red_background">@color/design_dark_red_main</item>
        <item name="recyclerView_gray_background">@color/design_dark_gray_main</item>

        <item name="recyclerViewItem_default_background">@color/design_black_main</item>
        <item name="recyclerViewItem_red_background">@color/design_dark_red_light</item>
        <item name="recyclerViewItem_gray_background">@color/design_dark_gray_light</item>

        <!--TEXT COLOR-->

        <item name="button_default_text_color">@color/white</item>
        <item name="button_red_text_color">@color/white</item>
        <item name="button_gray_text_color">@color/white</item>

        <item name="text_title_main_color">@color/white</item>
        <item name="text_title_second_color">@color/white</item>

        <item name="text_span_main_color">@color/white</item>
        <item name="text_span_second_color">@color/white</item>

        <item name="text_paragraph_main_color">@color/white</item>
        <item name="text_paragraph_second_color">@color/white</item>

        <item name="editText_span_main_color">@color/white</item>
        <item name="editText_span_second_color">@color/white</item>

        <item name="editText_paragraph_main_color">@color/white</item>
        <item name="editText_paragraph_second_color">@color/white</item>

        <item name="editText_span_hint_main_color">@color/white</item>
        <item name="editText_span_hint_second_color">@color/white</item>

        <item name="editText_paragraph_hint_main_color">@color/white</item>
        <item name="editText_paragraph_hint_second_color">@color/white</item>

        <item name="editText_span_tint_main_color">@color/white</item>
        <item name="editText_span_tint_second_color">@color/white</item>

        <item name="editText_paragraph_tint_main_color">@color/white</item>
        <item name="editText_paragraph_tint_second_color">@color/white</item>

        <!--SPECIAL-->

        <item name="iconColor">@color/white</item>
        <item name="android:colorBackground">@color/design_black_main</item>

    </style>

    <style name="Theme.SmartArzamas.NoActionBar" parent="Theme.SmartArzamas">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>