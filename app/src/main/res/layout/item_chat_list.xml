<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="@dimen/chatItem_padding">

    <LinearLayout
        android:layout_width="@dimen/chatItem_iconHeightAndWidth"
        android:layout_height="@dimen/chatItem_iconHeightAndWidth"
        android:orientation="vertical">

        <com.example.smartarzamas.support.IconView
            android:id="@+id/chat_icon"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ProgressBar
            android:id="@+id/progress"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            style="@style/text.span.main"
            android:text="sfgedfg"/>

        <TextView
            android:id="@+id/tv_category"
            style="@style/text.span.second"
            android:text="sfgedfg"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/bt_item_menu"
        style="@style/button.toolbar.default"
        android:src="@drawable/ic_menu_spots"
        android:layout_gravity="end|center_vertical"/>
</LinearLayout>