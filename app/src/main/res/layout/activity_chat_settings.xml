<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatSettingsActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarMain"
        style="@style/default_toolbar"
        android:layout_width="match_parent"
        android:elevation="4dp"
        android:contentInsetStart="4dp"
        android:contentInsetLeft="4dp"
        app:contentInsetEnd="4dp"
        app:contentInsetRight="4dp"
        app:contentInsetLeft="4dp"
        app:contentInsetStart="4dp">

        <ImageButton
            android:id="@+id/bt_close"
            style="@style/default_toolbar_default_button"
            app:srcCompat="?attr/actionModeCloseDrawable"/>

        <TextView
            android:text="@string/about_chat"
            style="@style/default_title_default_toolbar" />

    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginTop="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/chat_icon"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <ProgressBar
                        android:id="@+id/progress"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/chat_name"
                        android:textSize="24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/chat_description"
                        android:layout_width="wrap_content"
                        android:textSize="24dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">
                <Button
                    android:id="@+id/bt_change_chat_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/default_button"
                    android:text="@string/refactor_image"/>
                <Button
                    android:id="@+id/bt_change_chat_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/default_button"
                    android:text="@string/refactor_name"/>
                <Button
                    android:id="@+id/bt_change_chat_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/default_button"
                    android:text="@string/refactor_description"/>
            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rv_members"/>

        </LinearLayout>
    </ScrollView>


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView"
        android:layout_width="@dimen/dialog_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="@dimen/dialog_margin_tool_bar" />

</FrameLayout>