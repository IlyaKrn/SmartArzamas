<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/container"
android:layout_width="match_parent"
android:layout_height="match_parent">

<androidx.appcompat.widget.Toolbar
    android:id="@+id/toolbar_main"
    style="@style/default_toolbar"
    android:layout_width="match_parent"
    android:elevation="4dp"
    android:contentInsetStart="4dp"
    android:contentInsetLeft="4dp"
    app:contentInsetEnd="4dp"
    app:contentInsetRight="4dp"
    app:contentInsetLeft="4dp"
    app:contentInsetStart="4dp">

    <ImageButton
        android:id="@+id/bt_menu"
        style="@style/default_toolbar_default_button"
        app:srcCompat="@android:drawable/ic_menu_sort_by_size" />

    <com.example.smartarzamas.support.EditTextSearch
        android:id="@+id/et_search"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:hint="@string/search"
        android:textSize="23sp" />

    <ImageButton
        android:id="@+id/bt_profile"
        style="@style/default_toolbar_default_button"
        android:layout_gravity="end"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ic_profile" />


</androidx.appcompat.widget.Toolbar>

<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/swipe_refresh_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="?attr/actionBarSize">

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>



<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation_menu_hub_admin" />

    <fragment
        android:id="@+id/nav_host_fragment_activity_admin_hub"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@id/nav_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/mobile_navigation_admin" />

</androidx.constraintlayout.widget.ConstraintLayout>

<androidx.fragment.app.FragmentContainerView
    android:id="@+id/fragmentContainerView"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginVertical="@dimen/dialog_margin_tool_bar" />

</FrameLayout>